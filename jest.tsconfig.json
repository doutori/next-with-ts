{
    "compilerOptions": {
        "allowJs": true,
        "jsx": "react",
        "lib": [
            "es2017",
            "dom"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmit": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "preserveConstEnums": true,
        "removeComments": true,
        "skipLibCheck": true,
        "sourceMap": false,
        "strict": true,
        "target": "esnext",
        "baseUrl": "./",
        "paths": {
            "~/*": ["src/*"],
            "~pages/*": ["pages/*"]
        },
        "rootDirs": ["./pages", "./src"],
        "typeRoots": [
            "node_modules/@types",
            "./types"
        ]
    },
    "exclude": [
        "node_modules",
        "out",
        ".next"
    ]
}