{
    "name": "next-with-ts",
    "version": "0.1.0",
    "description": "next.js with typescript boiler plate",
    "repository": {
        "type": "git",
        "url": "git@github.com:uruha/next-with-ts.git"
    },
    "scripts": {
        "dev": "nodemon",
        "build": "next build && tsc --project tsconfig.server.json",
        "start": "cross-env NODE_ENV=production node dist/index.js",
        "type:check": "tsc",
        "lint:check": "eslint . --ext .ts,.tsx",
        "lint:fmt": "eslint . --fix --ext .ts,.tsx",
        "precommit": "lint-staged",
        "test": "jest"
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "eslint . --ext .ts,.tsx",
            "git add"
        ]
    },
    "keywords": [
        "next.js",
        "typescript"
    ],
    "author": "Kotaro Chiba",
    "license": "MIT",
    "dependencies": {
        "bunyan": "^1.8.12",
        "cross-env": "^6.0.3",
        "koa": "^2.10.0",
        "koa-helmet": "^5.2.0",
        "koa-router": "^7.4.0",
        "module-alias": "^2.2.2",
        "next": "^9.1.1",
        "next-redux-wrapper": "^4.0.1",
        "react": "^16.10.2",
        "react-dom": "^16.10.2",
        "react-redux": "^7.1.1",
        "redux": "^4.0.4",
        "redux-logger": "^3.0.6",
        "redux-saga": "^1.1.1",
        "ts-node": "^8.4.1",
        "typescript": "^3.6.4"
    },
    "devDependencies": {
        "@testing-library/react": "^9.3.2",
        "@types/bunyan": "^1.8.6",
        "@types/enzyme": "^3.10.3",
        "@types/enzyme-adapter-react-16": "^1.0.5",
        "@types/jest": "^24.0.19",
        "@types/koa": "^2.0.50",
        "@types/koa-helmet": "^3.1.2",
        "@types/koa-router": "^7.0.42",
        "@types/next-redux-wrapper": "^2.0.2",
        "@types/react": "^16.9.6",
        "@types/react-dom": "^16.9.2",
        "@types/react-redux": "^7.1.4",
        "@types/redux-logger": "^3.0.7",
        "@typescript-eslint/eslint-plugin": "^2.4.0",
        "@typescript-eslint/parser": "^2.4.0",
        "@typescript-eslint/typescript-estree": "^2.4.0",
        "babel-jest": "^24.9.0",
        "babel-plugin-module-resolver": "^3.2.0",
        "enzyme": "^3.10.0",
        "enzyme-adapter-react-16": "^1.15.1",
        "eslint": "^6.5.1",
        "eslint-config-prettier": "^6.4.0",
        "eslint-plugin-prettier": "^3.1.1",
        "eslint-plugin-react": "^7.16.0",
        "husky": "^3.0.9",
        "jest": "^24.9.0",
        "lint-staged": "^9.4.2",
        "nodemon": "^1.19.3",
        "prettier": "^1.18.2",
        "redux-saga-test-plan": "^4.0.0-beta.3",
        "snapshot-diff": "^0.5.2",
        "ts-jest": "^24.1.0"
    },
    "_moduleAliases": {
        "~": "src",
        "~pages": "pages"
    }
}
