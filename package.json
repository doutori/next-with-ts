{
    "name": "next-with-ts",
    "version": "0.1.0",
    "description": "next.js with typescript boiler plate",
    "repository": {
        "type": "git",
        "url": "git@github.com:uruha/next-with-ts.git"
    },
    "scripts": {
        "dev": "nodemon server/index.ts",
        "build": "next build",
        "start": "NODE_ENV=production ts-node -O '{\"module\":\"commonjs\"}' server/index.ts",
        "type-check": "tsc",
        "lint": "tslint -c tslint.json -p .",
        "lint-fmt": "tslint -c tslint.json --fix -p .",
        "tslint-check": "tslint-config-prettier-check ./tslint.json",
        "precommit": "lint-staged"
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "tslint -p tslint.json -p .",
            "git add"
        ]
    },
    "keywords": [
        "next.js",
        "typescript"
    ],
    "author": "Kotaro Chiba",
    "license": "MIT",
    "dependencies": {
        "@zeit/next-typescript": "^1.1.1",
        "koa": "^2.7.0",
        "koa-router": "^7.4.0",
        "next": "^8.1.0",
        "react": "^16.8.6",
        "react-dom": "^16.8.6",
        "ts-node": "^8.1.0",
        "typescript": "^3.4.4"
    },
    "devDependencies": {
        "@types/koa": "^2.0.48",
        "@types/koa-router": "^7.0.40",
        "@types/next": "^8.0.3",
        "@types/react": "^16.8.14",
        "@types/react-dom": "^16.8.4",
        "husky": "^1.3.1",
        "lint-staged": "^8.1.5",
        "nodemon": "^1.18.11",
        "prettier": "^1.17.0",
        "tslint": "^5.16.0",
        "tslint-config-prettier": "^1.18.0",
        "tslint-plugin-prettier": "^2.0.1",
        "tslint-react": "^4.0.0"
    }
}
