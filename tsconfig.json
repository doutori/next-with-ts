{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "preserve",
        "lib": [
            "dom",
            "es2015",
            "es2016",
            "es2017"
        ],
        "module": "esnext",
        "moduleResolution": "node",
        "noEmit": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "preserveConstEnums": true,
        "removeComments": false,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "target": "esnext",
        "baseUrl": "./",
        "paths": {
            "~/*": ["src/*"]
        },
        "rootDirs": ["./pages", "./src"],
        "typeRoots": [
            "node_modules/@types",
            "./types"
        ]
    }
}